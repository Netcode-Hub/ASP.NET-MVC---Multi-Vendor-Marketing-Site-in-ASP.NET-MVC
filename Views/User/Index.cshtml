@using PagedList.Mvc
@model PagedList.IPagedList<_2017VisualStudioMVC.Models.tbl_product> 



@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout1.cshtml";

}

<link href="~/Content/PagedList.css" rel="stylesheet" />

@if (Model != null)
{

    foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-12">
           
            <div class="card m-4 border-0 d-inline-flex w-75" style="border-radius: 24px; margin-left:20px;">
                <img src="@Url.Content(item.pro_image)" class="card-img-top" height="230" />
                <h4 class="text-center"> @Html.ActionLink(item.pro_name, "ViewAd", new { id = item.pro_id }, new { @class = "text-danger text-center fw-bold text-decoration-none" })</h4>
                <span class="text-muted text-center">@item.pro_des <span class="badge bg-danger w-25 text-center">@item.tbl_user.u_name shop</span></span>
            </div>
        </div>
    }

}



<div class="text-center">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
    of @Model.PageCount @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

