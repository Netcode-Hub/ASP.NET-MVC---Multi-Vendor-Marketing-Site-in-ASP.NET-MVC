@model _2017VisualStudioMVC.Models.tbl_user
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4 mb-5">
            <span class="display-6 fw-bold text-success text-center mb-5">Login</span>
            @Html.ValidationSummary("Fix these errors", new { @class = "text-danger" })
            <span class="text-danger">@ViewBag.error</span>
            <div class="input-group mt-2">
                <div class="input-group-text"><i class="fa fa-user"></i></div>
                @Html.TextBoxFor(x => x.u_email, new { @class = "form-control", @placeholder = "Email Address" })
                @Html.ValidationMessageFor(x => x.u_email, "*", new { @class = "text-danger" })
            </div>

            <div class="input-group mt-1">
                <div class="input-group-text"><i class="fa fa-lock-open"></i></div>
                @Html.PasswordFor(x => x.u_password, new {@class = "form-control", @placeholder = "Password" })
                @Html.ValidationMessageFor(x => x.u_password, "*", new { @class = "text-danger" })
            </div>
            <div class="input-group mt-2">
                <input type="submit" class="btn btn-success w-100" value="Login" />
            </div>
        </div>
        <div class="col-md-4"></div>

    </div>

}